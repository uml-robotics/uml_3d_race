<launch>
    <!-- First get the namespace of the robor if there is one-->
    <arg name="namespace" default="" />

    <!-- Activate Estop-->
    <node type="estop" name="robot_estop" pkg="uml_3d_race" output="screen" if="$(eval not namespace)"/>

    <!-- Activate Estop with namespace-->
    <node type="estop" name="robot_estop" pkg="uml_3d_race" output="screen" ns="$(arg namespace)" unless="$(eval not namespace)"/>

</launch>