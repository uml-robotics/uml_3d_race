<launch>
  <!-- SETTINGS -->
  <!-- World file to launch (excluding the .world extension) -->
  <arg name="world_name" default="level1" />
  <arg name="world_path" default="level1.world" />
  <!-- Robot Spawn Position -->
  <arg name="spawn_robot" default="true" />
  <arg name="spawn_x" default="0.0" />
  <arg name="spawn_y" default="0.0" />
  <arg name="spawn_yaw" default="0.0" /> <!-- Rotation in radians. -->
  <!-- Goal Position -->
  <arg name="goal_x" default="0.0"/>
  <arg name="goal_y" default="0.0"/>
  
  <arg name="navigate" default="true" />

  <!-- Launch Gazebo World -->
  <include file="$(find uml_3d_race)/launch/gazebo.launch">
    <arg name="world_path" value="$(arg world_path)" />
  </include>

  <!-- Spawn robot -->
  <include if="$(arg spawn_robot)" file="$(find uml_3d_race)/launch/spawn_robot.launch">
    <arg name="x" value="$(arg spawn_x)" />
    <arg name="y" value="$(arg spawn_y)" />
    <arg name="yaw" value="$(arg spawn_yaw)" />
    <arg name="level" value="$(arg world_name)" />
    <arg name="navigate" value="$(arg navigate)" />
  </include>

  <!-- Publish the two different goals needed for the given .world -->
  <node name="goal_publisher" pkg="uml_3d_race" type="goal_publisher" output="screen">
    <!-- Goal Positions -->
    <param name="goal_x" value="$(arg goal_x)" />
    <param name="goal_y" value="$(arg goal_y)" />
    <param name="spawn_x" value="$(arg spawn_x)" />
    <param name="spawn_y" value="$(arg spawn_y)" />
  </node>

</launch>
